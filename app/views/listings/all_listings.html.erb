<h1>Welcome to Furniture4Cheap, <%= @current_user.first_name=%>!</h1>
<h2>All Listings</h2>

<hr>

<h3> Sort by: </h3>
<table border = "1">
<tr>
<th> <a href = "/available"> Available </a></th>
<th> <a href = "/sold"> Sold </a> </th></tr></table>
<hr>
<table border="1">
  <tr>
    <th>Listing</th>
    <th>Price</th>
    <th>Image</th>
    <th>Description</th>
    <th>Seller</th>
    <th>Posted</th>
    <th>Status</th>
    <th></th>
  </tr>

  <% @listings.each do |listing| %>
  <tr>
    <td>
      <%= listing.name %>
    </td>
        <td>
      $<%= listing.price %>
    </td>
    <td>
    <div class = "banner">
      <img src="<%= listing.image %>" class="banner-image">
    </div>
    </td>

    <td>
      <%= listing.description %>
    </td>

    <td>
      <%= listing.seller.username %>
    </td>

    <td>
      <%= listing.created_at %>
    </td>
        <td>
      <%= listing.status %>
    </td>
    <td>
      <a href="/listings/<%= listing.id %>">
        Show details
      </a>
    </td>
  </tr>
  
  <% end %>
</table>
